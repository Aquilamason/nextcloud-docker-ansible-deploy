server {
	listen 80;
	server_name {{ snikket_server_domain }};

	location /.well-known/acme-challenge {
		proxy_pass http://127.0.0.1:5080;
	}

	location / {
		return 301 https://$http_host$request_uri;
	}
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name {{ snikket_server_domain }};

	ssl_certificate {{ nextcloud_nginx_proxy_ssl_config_dir_path }}/live/{{ nextcloud_subconvert_domain }}/fullchain.pem;
	ssl_certificate_key {{ nextcloud_nginx_proxy_ssl_config_dir_path }}/live/{{ nextcloud_subconvert_domain }}/privkey.pem;

	if ($scheme = http) {
		return 301 https://$server_name$request_uri;
	}

	location / {
		proxy_pass https://127.0.0.1:5443/;
		proxy_set_header      Host              $host;
		proxy_set_header      X-Forwarded-For   $proxy_add_x_forwarded_for;
		proxy_ssl_verify      off;
		proxy_set_header      X-Forwarded-Proto https;
		proxy_ssl_server_name on;

		# This is the maximum size of uploaded files in Snikket
		client_max_body_size 104857616; # 100MB + 16 bytes

		# For BOSH and WebSockets
		proxy_set_header Connection $http_connection;
		proxy_set_header Upgrade $http_upgrade;
		proxy_read_timeout 900s;

	}
}
