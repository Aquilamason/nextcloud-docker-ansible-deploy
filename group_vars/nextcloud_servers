    +
    (['nextcloud-goofys-appdata-preview.service'] if nextcloud_goofys_external_storage_for_appdata_previews_enabled else [])
    +
    (['nextcloud-onlyoffice-document-server.service'] if nextcloud_onlyoffice_enabled else [])
    +
    (['nextcloud-nginx-proxy.service'] if nextcloud_nginx_proxy_enabled else [])
  }}
